---
const { 
  id = '', 
  name = '', 
  label = '', 
  value = '', 
  placeholder = '', 
  required = false, 
  disabled = false, 
  type = 'text', 
  class: className = '', 
  ...rest 
} = Astro.props;
---

<label for={id} class="text-input-label">
  {label}
  <input
    id={id}
    name={name}
    type={type}
    value={value}
    placeholder={placeholder}
    required={required}
    disabled={disabled}
    class={`text-input ${className}`}
    {...rest}
  />
</label>

<style>
.text-input-label {
  display: flex;
  flex-direction: column;
  font-weight: 500;
  margin-bottom: 0.5rem;
}

.text-input {
  padding: 0.5rem;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 1rem;
  margin-top: 0.25rem;
}
</style>